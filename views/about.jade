extends layout

block headers
	title About - #{config.site_name}

block content
	.container
		.row
			+game_navbar()
		.row
			.col-xs-12
				h1 About
				ul.list-group
					+flash_messages
				ul.list-group
					+validation_errors
		.row
			.col-xs-12
				h3 Credit Where Credit is Due
				p 
					a(href='http://www.cardsagainsthumanity.com/', target="_blank") Cards Against Humanity&#0153;
					|  created the original card game including the 
					a(href='http://s3.amazonaws.com/cah/CAH_Rules.pdf', target="_blank") rules
					| , the original cards, and every part of the gameplay found on this site. 
					| The original cards created by them can be found in the &quot;Default&quot; 
					| tab of the &quot;Create Game&quot; page.
				p
