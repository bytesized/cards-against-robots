doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		link(rel='stylesheet', href='/stylesheets/bootstrap.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap-theme.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		block headers
			if config && config.site_name
				title= config.site_name
	body
		if messages
			ul.list-group
				if messages.error
					each text in messages.error
						li.list-group-item.list-group-item-danger #{text}
				if messages.success
					each text in messages.success
						li.list-group-item.list-group-item-success #{text}
				if messages.info
					each text in messages.info
						li.list-group-item.list-group-item-info #{text}
		block content
		script(src='/javascripts/jquery-1.11.3.min.js')
		script(src='/javascripts/bootstrap.min.js')