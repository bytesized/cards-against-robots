	padding-right: 10px
	padding-left: 10px

.col-xs-5ths
	width: 20%
	float: left

@media (min-width: 768px)
	.col-sm-5ths
		width: 20%
		float: left

@media (min-width: 992px)
	.col-md-5ths
		width: 20%
		float: left

@media (min-width: 1200px)
	.col-lg-5ths
		width: 20%;
		float: left;
